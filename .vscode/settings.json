{
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "files.trimTrailingWhitespace": true,
  "copilot.enable": {
    "*": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/venv": true,
    "**/env": true,
    "**/.venv": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/coverage": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/venv": true,
    "**/env": true,
    "**/.venv": true,
    "**/coverage": true
  },
  "files.insertFinalNewline": true,
  "files.eol": "\n"
}
